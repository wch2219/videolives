<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appcolor</item>
    </style>
    <!--浮动标签-->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/inputpine</item>
        <item name="colorControlActivated">@color/inputpine1</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor_color</item>
        <!--<item name="android:fontFamily" tools:ignore="NewApi">@font/pingfangregular_xml</item>-->
    </style>

    <style name="MyEditText1" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/havling</item>
        <item name="colorControlActivated">@color/havlingtran</item>
        <item name="android:textCursorDrawable">@drawable/shape_edit_cursor_color</item>
    </style>
    <style name="SplashActivityTheme" parent="AppTheme">
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:background">@drawable/shape_apptheme_color</item>

    </style>

    !--自定义seekbarstyle-->
    <style name="CustomSeekbarStyle" >
        <item name="android:maxHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/colorAccent</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress_drawable</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:thumb">@drawable/shape_thumb</item>
    </style>

    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/play_controller_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/play_controller_out_bottom</item>
    </style>

</resources>
