<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#66000000"
                android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_margin="@dimen/dimen_50dp"
            android:background="@drawable/shape_share_white"
            android:layout_centerInParent="true"
    >

        <TextView android:layout_width="wrap_content"
                  android:text="请修改您的昵称"
                  android:textColor="@color/text_color"
                  android:textSize="@dimen/text_dimens16"
                  android:layout_gravity="center_horizontal"
                  android:padding="@dimen/text_dimens15"
                  android:layout_height="wrap_content"

        />
        <EditText android:layout_width="match_parent"
                  android:hint="请输入您的昵称"
                  android:maxEms="8"
                  android:maxLength="8"
                  android:gravity="center"
                  android:singleLine="true"
                  android:id="@+id/et_content"
                  android:layout_gravity="top"
                  android:textSize="@dimen/text_dimens14"
                  android:padding="@dimen/dimen_5dp"
                  android:layout_marginLeft="@dimen/dimen_40dp"
                  android:layout_marginRight="@dimen/dimen_40dp"
                  android:layout_marginBottom="@dimen/text_dimens10"
                  android:background="@drawable/shape_edit_bg"
                  android:layout_height="@dimen/dimen_40dp"


        />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/havling"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"

        >
            <TextView android:layout_width="wrap_content"
                      android:text="取消"
                      android:id="@+id/tv_close"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_height="@dimen/dimen_35dp"/>
            <View
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="35dp"
                    android:background="@color/havling"
            />
            <TextView android:layout_width="wrap_content"
                      android:text="确定"
                      android:id="@+id/tv_aff"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:layout_height="@dimen/dimen_35dp"/>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>