<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activitys.MineInfoActivity">
    <com.example.kottlinbaselib.utils.CustomToolBar
            android:id="@+id/cus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_src="@mipmap/icon_back"
            app:title_text="个人信息"

            app:line_color="@color/havling"
            app:line_height="@dimen/dimen_5dp"
            app:right_title_color="@color/blue"/>
    <!--app:right_title="@string/aff"-->
    <LinearLayout android:layout_width="match_parent"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content"
                  android:padding="@dimen/dimen_10dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="@dimen/text_dimens16"
                android:textColor="@color/text_color"
        />
        <com.example.kottlinbaselib.weight.CircleImageView
                android:id="@+id/iv_head"
                android:src="@mipmap/icon_userhead"
                android:layout_width="@dimen/dimen_60dp"
                android:layout_height="@dimen/dimen_60dp"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/havling"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:padding="@dimen/dimen_10dp"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
    >
        <TextView android:layout_width="wrap_content"
                  android:layout_weight="1"
                  android:text="昵称"

                  android:textSize="@dimen/text_dimens16"
                  android:textColor="@color/text_color"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_nickname"
                  android:text="昵称"
                  android:hint="请设置您的昵称"
                  android:textSize="@dimen/text_dimens16"
                  android:textColor="@color/text_99"
                  android:gravity="center_vertical|right"
                  android:drawablePadding="@dimen/text_dimens10"
                  android:drawableRight="@mipmap/icon_edit"
                  android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/havling"
    />
</LinearLayout>