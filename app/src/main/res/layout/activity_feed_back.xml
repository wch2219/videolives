<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activitys.FeedBackActivity">
    <com.example.kottlinbaselib.utils.CustomToolBar
            android:id="@+id/cus_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:back_src="@mipmap/icon_back"
            app:title_text="意见反馈"
            app:right_title="@string/aff"
            app:line_color="@color/havling"
            app:line_height="@dimen/dimen_5dp"
            app:right_title_color="@color/blue"/>

    <EditText
            android:layout_width="match_parent"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:id="@+id/et_content"
            android:hint="请输入您的宝贵意见!!"
            android:gravity="start"
            android:padding="@dimen/text_dimens10"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_dimens14"
            android:layout_margin="@dimen/text_dimens20"
            android:background="@drawable/shape_editext_line"
            android:layout_height="@dimen/dimen_200dp"/>
</LinearLayout>